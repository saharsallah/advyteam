@model IEnumerable<Solution.Domain.Entities.reclamation>

@{
    ViewBag.Title = "Mesreclamation";
    
    var j = 0;
}




    <table class="table">


 
        @foreach (var item in Model)
        {

            <div class="listsearch-maiwrap box-inside fl-wrap" style=" width:auto ; z-index: auto; position: center; margin-left: 10px; ">
                <div class="list-main-wrap fl-wrap card-listing" style="width: auto;">
                    <article class="geodir-category-listing fl-wrap" style="width: auto ;">
                        <div class="geodir-category-img">
                            <img src="data:image/jpeg;base64,@Session["emp3"].ToString() " width="100" height="100" />
                        </div>
                        <div class="box-widget-content" style="width: auto;">
                            <p>Objet de reclamation : @Html.DisplayFor(modelItem => item.Objet)</p>
                            <p>Description de reclamation : @Html.DisplayFor(modelItem => item.Description) </p>
                            <p>Date reclamation :  @Html.DisplayFor(modelItem => item.DateReclamation) </p>
                            @if (item.DateTraitement == null)
                            {
                                <p>
                                    La reclamation  Encore non traité
                                </p>
                            }
                            else
                            {
                                <p>
                                    traité le      @Html.DisplayFor(modelItem => item.DateTraitement)
                                </p>
                            }

                            <div class="geodir-category-options fl-wrap">
                                <div class="">
                                    @if (item.DateTraitement == null)
                                    {
                                        <p>
                                            La reclamation : Est en cours  de traitment
                                        </p>
                                    }
                                    else
                                    {
                                        <p>
                                            Dure de traitement :   @ViewBag.res2[j] Jours
                                        </p>
                                    }

                                    <div class="listing-rating card-popup-rainingvis" data-starrating2="5">
                                        
                                      
                                    </div>

                                </div>
                            </div>

                            <div class="geodir-category-options fl-wrap">
                                <div class="btn transparent-btn float-btn custom-scroll-link" style="align-self">
                                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            </div>

         
            j++;
        }
   
    </table>
